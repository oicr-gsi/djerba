{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/oicr-gsi/djerba/blob/master/src/lib/djerba/data/input_schema.json",
    "type": "object",
    "properties":
    {
	"study_meta": {
	    "type": "object"
	},
	"cancer_type": {
	    "type": "object"
	},
	"case_lists": {
	    "type": "array"
	},
	"samples_meta": {
	    "type": "object"
	},
	"samples": {
	    "type": "array"
	},
	"genetic_alterations": {
	    "type": "array",
	    "items": {
		"type": "object",
		"properties": {
		    "datatype": {
			"type": "string"
		    },
		    "genetic_alteration_type": {
			"type": "string"
		    },
		    "input_directory": {
			"type": "string"
		    },
		    "workflow_run_id": {
			"type": "string"
		    },
		    "input_files": {
			"type": "object"
		    },
		    "metadata": {
			"type": "object"
		    }
		},
		"required": [
		    "datatype", "genetic_alteration_type", "input_directory", "input_files", "metadata"
		],
		"uniqueItems": true
	    }
	}
    },
    "required": [
	"samples",
	"genetic_alterations"
    ],
    "dependencies": {
	"study_meta": ["cancer_type", "case_lists", "samples_meta"],
	"cancer_type": ["study_meta", "case_lists", "samples_meta"],
	"case_lists": ["study_meta", "cancer_type", "samples_meta"],
	"samples_meta": ["study_meta", "cancer_type", "case_lists"]
    }
}
